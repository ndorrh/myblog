<div class="users_container">
    <h1>Create new post</h1>
    <%= form_with model: post, method: :post, url: new_user_post_path, local: true, scope: :new_post do |form| %> 
        <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :text %>
            <%= form.text_area :text, size:"100x10", class: "form-control" %>
        </div>
        <% if flash.now[:alert] %>
            <p class="alert"><%= flash[:alert] %></p>
        <% end %>
        <%= form.submit "Submit", class: "see_all_post" %>
    <% end %>
</div>