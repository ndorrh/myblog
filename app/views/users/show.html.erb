<div class="users_container">
<div class="header">
<h1>MY BLOG</h1>
<div class="sign_out">
<%= button_to "Sign Out", destroy_user_session_path, method: :delete, :class=> "see_all_post"%>
<a href="/posts/new"><button type="button" class="see_all_post">Create a Post</button></a>
</div>
</div>
<%= render partial: 'shared/card_user', locals: {user: @user} %>
<p class="user_bio"><%= @user.bio%></p>
<%#Add post for the user%>
<% @posts.each do |post| %>
<a href="<%=post.author_id%>/posts" class="user_link">
<%= render partial: 'shared/card_post', locals: {post: post} %>
</a>
<%end%>
<div class="btn"><a href="<%=@user.id%>/posts" class="link" class="see_all_post">See all post</a></div>
</div>



